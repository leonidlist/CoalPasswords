<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CoalPasswords">
    <DataTemplate DataType="{x:Type local:IRecord}" x:Key="ListViewTemplate">
        <Border CornerRadius="5" Background="White" Width="150" Height="200" Margin="20">
            <Border.Effect>
                <DropShadowEffect Opacity=".7" Direction="270"></DropShadowEffect>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" 
                           Grid.Row="1" FontSize="14" Text="{Binding Title}" FontFamily="{StaticResource AppleBold}"></TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>