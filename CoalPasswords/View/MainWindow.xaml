<Window x:Class="CoalPasswords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoalPasswords"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="Transparent"
        Title="Login" Height="550" Width="350"
        FontFamily="Lato"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Border CornerRadius="5">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#343746" Offset="0.1"></GradientStop>
                <GradientStop Color="#242430" Offset="0.6"></GradientStop>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Name="TitleBar" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
                <Label Height="25" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Left" Margin="20 0" Foreground="White" VerticalContentAlignment="Center">Log In</Label>
                <Button Width="25" Height="25" Cursor="Hand" Command="{Binding CloseWindow}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20 0" Background="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}"/>
                                <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Content>
                        <Viewbox Width="20" Height="20">
                            <Canvas Width="24" Height="23">
                                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" Fill="White" />
                            </Canvas>
                        </Viewbox>
                    </Button.Content>
                </Button>
            </Grid>
            <StackPanel Grid.Row="1">
                <materialDesign:Card Height="350" Padding="32" Margin="20" VerticalAlignment="Center">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#f093fb" Offset="0.2"></GradientStop>
                            <GradientStop Color="#f5576c" Offset="0.8"></GradientStop>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel VerticalAlignment="Center">
                        <Label Foreground="White" Margin="15 0" FontSize="14" FontFamily="Lato">E-Mail:</Label>
                        <TextBox Background="White" Height="30" FontFamily="Lato" Foreground="Black" FontSize="14" Margin="15 5 15 15" BorderThickness="0" Padding="5">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Label Foreground="White" FontFamily="Lato" FontSize="14" Margin="15 0">Password:</Label>
                        <TextBox Background="White" FontFamily="Lato" Height="30" Foreground="Black" FontSize="14" Margin="15 5 15 15" BorderThickness="0" Padding="5">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                </materialDesign:Card>
                <Button Margin="20" FontFamily="Lato" Content="Log In" Foreground="White" Padding="5,15" FontSize="18" Cursor="Hand" BorderThickness="0">
                    <Button.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#667eea" Offset="0.2"></GradientStop>
                            <GradientStop Color="#764ba2" Offset="0.8"></GradientStop>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"></Setter>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Green"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
